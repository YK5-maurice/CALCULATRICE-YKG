<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#979191"
    tools:ignore="HardcodedText"
    android:layout_margin="2dp">




    <!-- Rendre la barre initialement invisible -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="180sp"
            android:gravity="end"
            android:text=" "
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textIsSelectable="true"
            />

    </LinearLayout>

    <LinearLayout style="@style/layer"
        android:layout_marginTop="5dp">

        <Button
            style="@style/OpBouton"
            android:id="@+id/D"
            android:text="Del" />

        <Button
            android:id="@+id/op1"
            style="@style/OpBouton"
            android:text="%" />

        <Button
            android:id="@+id/AC"
            style="@style/OpBouton"
            android:text="AC" />

        <Button
            android:id="@+id/op2"
            style="@style/OpBouton"
            android:text="/" />
    </LinearLayout>

    <LinearLayout style="@style/layer">

        <Button
            android:id="@+id/bt7"
            style="@style/nbBouton"
            android:text="7"/>

        <Button
            android:id="@+id/bt8"
            style="@style/nbBouton"
            android:text="8" />

        <Button
            android:id="@+id/bt9"
            style="@style/nbBouton"
            android:text="9" />

        <Button
            android:id="@+id/op3"
            android:text="*"
            style="@style/OpBouton"/>
    </LinearLayout>

    <LinearLayout style="@style/layer">

        <Button
            android:id="@+id/bt4"
            style="@style/nbBouton"
            android:text="@string/_4" />

        <Button
            android:id="@+id/bt5"
            style="@style/nbBouton"
            android:text="@string/_5"/>

        <Button
            android:id="@+id/bt6"
            style="@style/nbBouton"
            android:text="@string/_6"/>

        <Button
            android:id="@+id/op4"
            style="@style/OpBouton"
            android:text="@string/t" />
    </LinearLayout>

    <LinearLayout style="@style/layer">

        <Button
            android:id="@+id/bt1"
            style="@style/nbBouton"
            android:text="1" />

        <Button
            android:id="@+id/bt2"
            style="@style/nbBouton"
            android:text="2"/>

        <Button
            android:id="@+id/bt3"
            style="@style/nbBouton"
            android:text="3" />

        <Button
            android:id="@+id/op5"
            style="@style/OpBouton"
            android:text="+"/>
    </LinearLayout>

    <LinearLayout style="@style/layer"
        android:layout_marginBottom="2dp">

        <Button
            android:id="@+id/op6"
            style="@style/nbBouton"
            android:text="+/-"/>

        <Button
            android:id="@+id/bt0"
            style="@style/nbBouton"
            android:text="0" />

        <Button
            android:id="@+id/op0"
            style="@style/nbBouton"
            android:text="." />

        <Button
            android:id="@+id/egal"
            style="@style/OpBouton"
            android:text="=" />
    </LinearLayout>

</LinearLayout>